@import 'main.postcss';

.Select {
  display: flex;
  margin-bottom: 1em;

  &_label {
    padding: calc(var(--touchablePaddingVertical) + var(--hairThin)) 0;
    width: 5em;
  }

  &_icon {
    color: var(--colorBorder);
  }

  &_element {
    flex: 1;
    width: 100%;

    &.__required {
      & :global(.Select-control) {
        border-color: var(--colorWrong);
      }
    }

    &_validationError {
      color: var(--colorWrong);
    }
  }
}
