@import 'main.postcss';

.TextInput {
  margin-bottom: 1em;
  &_label {
    width: 5em;
    display: inline-block;
  }
  &_validationError {
    display: inline-block;
    color: var(--colorWrong);
  }
  &_element {
    border: var(--hairThin) solid var(--colorIdle);
    border-radius: 0.25em;
    outline: none;
  }
  &_error {
    border-color: var(--colorWrong);
  }
  &_required {
    border-color: var(--colorWrong);
  }
}
