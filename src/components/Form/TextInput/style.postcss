@import 'main.postcss';

.TextInput {
  display: flex;
  margin-bottom: 1em;

  &_label {
    width: 5em;
  }

  &_inputContainer {
    flex: 1;

    &_element {
      border: var(--hairThin) solid var(--colorIdle);
      border-radius: var(--borderRadius);
      display: block;
      outline: none;
      padding: var(--touchablePaddingVertical) var(--touchablePaddingHorizontal);
      width: 100%;

      &[disabled] {
        background-color: #eee;
        cursor: not-allowed;
      }
    }

    &_validationError {
      color: var(--colorWrong);
      display: block;
    }
  }

  &.__error {
    & .TextInput_element {
      border-color: var(--colorWrong);
    }
  }

  &.__required {
    & .TextInput_element {
      border-color: var(--colorWrong);
    }
  }
}
