@import 'main.postcss';

:root {
  --borderWidth: var(--hairThin);
}

.Card {
  display: block;
  -webkit-overflow-scrolling: touch;
  position: relative;

  &:not(.__backgroundless) {
    background: var(--colorCardBg);
  }

  &:not(.__borderless) {
    border: var(--borderWidth) solid var(--colorBorder);
  }
}
