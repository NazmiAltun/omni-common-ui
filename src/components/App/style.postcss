.App {
  display: flex;
  flex-direction: column;
  min-height: 100vh;

  &_wrap {
    align-items: stretch;
    display: flex;
    flex-direction: row;
    flex-grow: 1;
  }

  &_content {
    align-items: stretch;
    display: flex;
    flex: 1;
    overflow: auto;

    & > div {
      flex: 1;
    }
  }
}
