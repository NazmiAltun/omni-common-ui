.Dialog {
  background-color: #fff;
  border-radius: 4px;
  border: 1px solid #ccc;
  bottom: 40px;
  left: 40px;
  outline: none;
  overflow-scrolling: touch;
  overflow: auto;
  padding: 20px;
  position: absolute;
  right: 40px;
  top: 40px;
}

.Overlay {
  background-color: rgba(255, 255, 255, 0.75);
  bottom: 0;
  left: 0;
  position: fixed;
  right: 0;
  top: 0;
}
