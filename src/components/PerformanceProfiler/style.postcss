@import 'main.postcss';

:root {
  --height: 145px;
  --space: 10px;
}

.PerformanceProfiler {
  display: flex;
  flex-direction: column;
  height: var(--height);
  left: 0;
  padding: var(--space);
  position: absolute;
  text-align: center;
  top: calc(50% - var(--height) / 2);
  z-index: var(--zIndex-10--perfTools);

  @mixin cardbg;
  @mixin cardshadow;

  &_button {
    margin: 0 !important;

    &:not(:last-child) {
      margin-bottom: var(--space) !important;
    }
  }
}
