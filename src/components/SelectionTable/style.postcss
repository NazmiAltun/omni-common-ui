@import 'main.postcss';

.SelectionTable {
  &_heading {
    @mixin fontHeading;

    display: flex;

    &_route {
      align-self: center;
      cursor: default;
      min-width: 30px;
      overflow: hidden;
      text-overflow: ellipsis;
      user-select: none;
      white-space: nowrap;
    }

    &_back {
      align-self: center;
      cursor: pointer;
      display: inline-flex;
      min-width: 20px;
    }

    &_route,
    &_back {
      margin-right: 10px;
    }
  }

  &_header {
    align-items: center;
  }
}
