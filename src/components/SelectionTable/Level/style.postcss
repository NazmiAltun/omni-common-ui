@import 'main.postcss';

:root {
  --verticalPadding: 10px;
}

.Level {
  border-bottom: 1px solid #dfdfdf;
  cursor: pointer;
  display: flex;
  height: 45px;
  justify-content: space-between;
  padding: var(--verticalPadding) 20px;

  @media (--md-viewport-new) {
    padding: var(--verticalPadding) 30px;
  }

  &_label {
    @mixin fontHeading;

    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  &_icon {
    margin-top: 4px;
  }

  &:last-child {
    border-bottom: none;
  }
}
